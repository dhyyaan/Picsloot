<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:id="@+id/fragContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@android:color/white"
        tools:context="com.think360.sotaknights.activities.PicsLootActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCongratulation"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/smile" />
        <TextView
            android:id="@+id/tvCong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="34sp"
            android:textColor="#323232"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:text="Congratulations!" />
        <TextView
            android:id="@+id/tvSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="#8A8A8A"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="You have successfully sent all images" />
        <com.rafakob.drawme.DrawMeButton
            android:id="@+id/btnViewOrder"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/ivLogin"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif"
            android:textAllCaps="true"
            android:text="View Order"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:dm_backColor="#C61F36"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            app:dm_backColorDisabled="@android:color/white"
            app:dm_backColorPressed="@android:color/holo_red_dark"
            app:dm_radius="4dp" />
    </LinearLayout>
    </FrameLayout>
</layout>
