<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fragContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@android:color/white">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="@dimen/column_width"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:clipToPadding="false"  />



        <TextView
            android:id="@+id/tvImageUploaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:textSize="16sp"
            android:layout_marginTop="22dp"
            android:text="5 images uploaded " />

        <com.rafakob.drawme.DrawMeButton
            android:id="@+id/btnUploadImages"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/ivLogin"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif"
            android:textAllCaps="true"
            android:text="Upload Images for print"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:dm_backColor="#C61F36"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            app:dm_backColorDisabled="@android:color/white"
            app:dm_backColorPressed="@android:color/holo_red_dark"
            app:dm_radius="4dp" />

    </LinearLayout>

</layout>
