<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:id="@+id/fragContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@android:color/white"
        tools:context="com.think360.sotaknights.activities.LoginActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/small_bg"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop" />
                <TextView
                    android:layout_marginTop="30dp"
                    android:id="@+id/tvEnterOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="Enter OTP sent to your registered mobile number" />



                <com.think360.picsloot.customview.OtpView
                    android:id="@+id/otp_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                  android:layout_marginTop="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp">

                    <requestFocus
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        tools:layout_editor_absoluteY="81dp"
                        tools:layout_editor_absoluteX="0dp" />
                </com.think360.picsloot.customview.OtpView>
               <LinearLayout
                   android:id="@+id/llValidFor"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                <TextView
                   android:id="@+id/tvValidFor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid for  " />
                 <TextView
                    android:id="@+id/tvSecons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textSize="18sp"
                   android:text="60" />
                  <TextView
                   android:id="@+id/tvSecondsTxt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="  seconds" />
                 </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvGenerateOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate OTP again"
                    android:gravity="center"/>
                <com.rafakob.drawme.DrawMeButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_below="@+id/ivLogin"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:text="Next"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:dm_backColor="#C61F36"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    app:dm_backColorDisabled="@android:color/white"
                    app:dm_backColorPressed="@android:color/holo_red_dark"
                    app:dm_radius="4dp" />
                </LinearLayout>
            </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal|center_vertical" />
    </FrameLayout>
    </layout>