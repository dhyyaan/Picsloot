<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<!--<data>
    <variable name="data" type="com.think360.picsloot.model.NotificationItem"/>
</data>-->
<RelativeLayout
    android:padding="8dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivUser"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/ivUser"
        android:layout_toRightOf="@+id/ivUser" />

    <TextView
        android:gravity="center"
        android:id="@+id/tvNoOfImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvDateTime"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/tvDateTime"
        android:layout_toRightOf="@+id/tvDateTime"
        android:textColor="#2F2F2F"
        />
    <View
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tvNoOfImages"
        android:background="#E1E1E1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>
</layout>